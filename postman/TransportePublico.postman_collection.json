        {
          "name": "Listar Vehiculos por Estado",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/vehiculos/estado/ACTIVO"
          }
        },
        {
          "name": "Crear Vehiculo",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/vehiculos",
